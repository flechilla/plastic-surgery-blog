---
import RatingStars from './RatingStars.astro';

interface Props {
  name: string;
  address: string;
  city: string;
  state: string;
  rating: number;
  reviewCount: number;
  verified?: boolean;
  yearEstablished?: number;
  certifications?: string[];
}

const { name, address, city, state, rating, reviewCount, verified = false, yearEstablished, certifications } = Astro.props;
---

<header class="bg-ivory pb-10 pt-8 md:pb-16 md:pt-12">
  <div class="mx-auto max-w-7xl px-6 lg:px-10">
    <!-- Breadcrumb -->
    <nav class="animate-on-scroll mb-8" aria-label="Breadcrumb">
      <ol class="flex flex-wrap items-center gap-2 text-xs text-charcoal/40">
        <li>
          <a href="/" class="transition-colors hover:text-charcoal">Home</a>
        </li>
        <li aria-hidden="true">
          <svg class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
          </svg>
        </li>
        <li>
          <a href="/clinics/" class="transition-colors hover:text-charcoal">Clinic Directory</a>
        </li>
        <li aria-hidden="true">
          <svg class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
          </svg>
        </li>
        <li>
          <a href={`/clinics/${city.toLowerCase()}/`} class="transition-colors hover:text-charcoal">{city}, {state}</a>
        </li>
      </ol>
    </nav>

    <div class="animate-on-scroll flex flex-col gap-6 md:flex-row md:items-start md:justify-between">
      <!-- Name & Info -->
      <div class="min-w-0 flex-1">
        <div class="flex items-center gap-3">
          <h1 class="font-serif text-3xl font-medium leading-tight text-charcoal md:text-4xl lg:text-5xl">
            {name}
          </h1>
          {verified && (
            <div class="flex h-7 w-7 flex-shrink-0 items-center justify-center rounded-full bg-deep-sage/10" title="Verified Clinic">
              <svg class="h-4 w-4 text-deep-sage" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12c0 1.268-.63 2.39-1.593 3.068a3.745 3.745 0 01-1.043 3.296 3.745 3.745 0 01-3.296 1.043A3.745 3.745 0 0112 21c-1.268 0-2.39-.63-3.068-1.593a3.746 3.746 0 01-3.296-1.043 3.745 3.745 0 01-1.043-3.296A3.745 3.745 0 013 12c0-1.268.63-2.39 1.593-3.068a3.745 3.745 0 011.043-3.296 3.746 3.746 0 013.296-1.043A3.746 3.746 0 0112 3c1.268 0 2.39.63 3.068 1.593a3.746 3.746 0 013.296 1.043 3.746 3.746 0 011.043 3.296A3.745 3.745 0 0121 12z" />
              </svg>
            </div>
          )}
        </div>

        <!-- Location -->
        <div class="mt-3 flex items-center gap-2 text-charcoal/60">
          <svg class="h-4 w-4 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
          </svg>
          <span class="text-sm">{address}</span>
        </div>

        <!-- Rating -->
        <div class="mt-4 flex flex-wrap items-center gap-4">
          <div class="flex items-center gap-2">
            <RatingStars rating={rating} size="lg" />
            <span class="text-lg font-medium text-charcoal">{rating}</span>
            <span class="text-sm text-charcoal/40">({reviewCount} reviews)</span>
          </div>
          {yearEstablished && (
            <>
              <div class="hidden h-5 w-px bg-warm-sand/60 sm:block"></div>
              <span class="text-sm text-charcoal/50">Est. {yearEstablished}</span>
            </>
          )}
        </div>

        <!-- Certifications -->
        {certifications && certifications.length > 0 && (
          <div class="mt-4 flex flex-wrap gap-2">
            {certifications.map((cert) => (
              <span class="inline-flex items-center gap-1.5 rounded-md bg-deep-sage/8 px-3 py-1.5 text-[11px] font-medium text-deep-sage">
                <svg class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" />
                </svg>
                {cert}
              </span>
            ))}
          </div>
        )}
      </div>
    </div>
  </div>
</header>
