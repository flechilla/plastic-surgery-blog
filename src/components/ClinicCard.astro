---
import RatingStars from './RatingStars.astro';

interface Props {
  name: string;
  slug: string;
  citySlug: string;
  address: string;
  phone: string;
  rating: number;
  reviewCount: number;
  specialties: string[];
  description: string;
  verified?: boolean;
  featured?: boolean;
}

const { name, slug, citySlug, address, phone, rating, reviewCount, specialties, description, verified = false, featured = false } = Astro.props;
---

<a href={`/clinics/${citySlug}/${slug}/`} class="group block">
  <article
    class:list={[
      'overflow-hidden rounded-2xl bg-white shadow-card transition-all duration-400',
      'hover:-translate-y-1 hover:shadow-card-hover',
      featured && 'ring-1 ring-rose-gold/20',
    ]}
  >
    <div class="p-6">
      <!-- Header -->
      <div class="flex items-start justify-between gap-4">
        <div class="min-w-0 flex-1">
          <div class="flex items-center gap-2">
            <h3 class="truncate font-serif text-xl font-medium text-charcoal transition-colors duration-200 group-hover:text-rose-gold-dark">
              {name}
            </h3>
            {verified && (
              <div class="flex h-5 w-5 flex-shrink-0 items-center justify-center rounded-full bg-deep-sage/10" title="Verified Clinic">
                <svg class="h-3 w-3 text-deep-sage" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12c0 1.268-.63 2.39-1.593 3.068a3.745 3.745 0 01-1.043 3.296 3.745 3.745 0 01-3.296 1.043A3.745 3.745 0 0112 21c-1.268 0-2.39-.63-3.068-1.593a3.746 3.746 0 01-3.296-1.043 3.745 3.745 0 01-1.043-3.296A3.745 3.745 0 013 12c0-1.268.63-2.39 1.593-3.068a3.745 3.745 0 011.043-3.296 3.746 3.746 0 013.296-1.043A3.746 3.746 0 0112 3c1.268 0 2.39.63 3.068 1.593a3.746 3.746 0 013.296 1.043 3.746 3.746 0 011.043 3.296A3.745 3.745 0 0121 12z" />
                </svg>
              </div>
            )}
          </div>
          <!-- Rating -->
          <div class="mt-2 flex items-center gap-2">
            <RatingStars rating={rating} size="sm" />
            <span class="text-sm font-medium text-charcoal">{rating}</span>
            <span class="text-xs text-charcoal/40">({reviewCount} reviews)</span>
          </div>
        </div>
        {featured && (
          <span class="flex-shrink-0 rounded-md bg-rose-gold/10 px-2.5 py-1 text-[10px] font-medium uppercase tracking-[0.1em] text-rose-gold-dark">
            Featured
          </span>
        )}
      </div>

      <!-- Address -->
      <div class="mt-4 flex items-start gap-2">
        <svg class="mt-0.5 h-4 w-4 flex-shrink-0 text-charcoal/30" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
          <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
        </svg>
        <span class="text-sm text-charcoal/60">{address}</span>
      </div>

      <!-- Description -->
      <p class="mt-3 line-clamp-2 text-sm leading-relaxed text-charcoal/50">{description}</p>

      <!-- Specialties -->
      <div class="mt-4 flex flex-wrap gap-1.5">
        {specialties.slice(0, 4).map((specialty) => (
          <span class="rounded-md bg-warm-sand/40 px-2.5 py-0.5 text-[11px] font-medium text-charcoal/60">
            {specialty}
          </span>
        ))}
        {specialties.length > 4 && (
          <span class="rounded-md bg-warm-sand/40 px-2.5 py-0.5 text-[11px] font-medium text-charcoal/40">
            +{specialties.length - 4} more
          </span>
        )}
      </div>

      <!-- Footer -->
      <div class="mt-5 flex items-center justify-between border-t border-warm-sand/40 pt-4">
        <a
          href={`tel:${phone.replace(/[^+\d]/g, '')}`}
          class="inline-flex items-center gap-1.5 text-xs font-medium text-charcoal/50 transition-colors hover:text-charcoal"
          onclick="event.stopPropagation()"
        >
          <svg class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
          </svg>
          {phone}
        </a>
        <span class="text-xs font-medium tracking-wide text-rose-gold transition-all duration-200 group-hover:translate-x-1">
          View details &rarr;
        </span>
      </div>
    </div>
  </article>
</a>
